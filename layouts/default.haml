!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %title
      wiki.template -
      = item[:title]
    %link{:rel => "stylesheet", :href => "/assets/app.scss.css" }
    %link{:rel => "stylesheet", :href => "/assets/custom.scss.css" }
  %body
    .wiki_sidebar.large-2.columns
      .column
        .large-2.rows
          Placeholder for image
        .large-10.rows
          %p
            %a.button{:href=>'/'}Home
            %a.button{:href=>'/categories'}Categories
    .large-10.columns
      = yield

    %small.footer
      .large-2.columns
        .column
          %p
            wiki.template (C) 2015 Matthias Beyer
      .large-10.columns
        - unless @item[:hide_categories]
          %p
            Categories:
            = category_links_for_item item

